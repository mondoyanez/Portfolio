@model CampMadLib

@{
    ViewData["Title"] = "MadLib";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-2">
            <input type="button" class="btn btn-primary" value="DEFAULT" id="CampDefault">
        </div>
        <div class="col-md-6">
            <h2>Fill in fields to generate Madlibs</h2>
        </div>
        <div class="col-md-2">
            <input type="button" class="btn btn-primary" value="CLEAR" id="CampClear">
        </div>
    </div>
</div>

<div class="row camp-Content">

    <form asp-controller="Camp" asp-action="DisplayMadLibs" method="post">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col">
                <label>Name of Family Member</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="Name">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Name of Camp</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="CampName">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Adjective</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="Adjective1">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Activity</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="Activity1">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Activity</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="Activity2">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Plural Noun</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="PluralNoun">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Adjective</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="Adjective2">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Noun</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="Noun">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <label>Nick Name</label>
            </div>
            <div class="col-xs-4">
                <input class="form-control" asp-for="NickName">
            </div>
        </div>
        <br>
        <div class="row">
            <input type="submit" class="btn btn-primary" value="SUBMIT">
        </div>
    </form>
</div>